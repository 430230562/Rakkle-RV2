<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<RecipeDef Name="ChopMeatBase" Abstract="True">
		<workSpeedStat>CookSpeed</workSpeedStat>
		<requiredGiverWorkType>Cooking</requiredGiverWorkType>
		<effectWorking>ButcherFlesh</effectWorking>
		<soundWorking>Recipe_ButcherCorpseFlesh</soundWorking>
		<allowMixingIngredients>true</allowMixingIngredients>
		<ingredientValueGetterClass>IngredientValueGetter_Nutrition</ingredientValueGetterClass>
		<fixedIngredientFilter>
			<categories>
				<li>MeatRaw</li>
			</categories>
					<thingDefs>
						<li>RS_BeyondMeat</li>
					</thingDefs>
		</fixedIngredientFilter>
		<defaultIngredientFilter>
			<categories>
				<li>MeatRaw</li>
			</categories>
			<thingDefs>
						<li>RS_BeyondMeat</li>
					</thingDefs>
			<disallowedCategories>
				<li>EggsFertilized</li>
			</disallowedCategories>
			<!--            <disallowedThingDefs>
                <li>Meat_Human</li>
                <li>Meat_Megaspider</li>
                <li>InsectJelly</li>
            </disallowedThingDefs> -->
		</defaultIngredientFilter>
		<workSkill>Cooking</workSkill>
	</RecipeDef>

	<RecipeDef ParentName="ChopMeatBase">
		<defName>Making_BigSimpleRawMeatBall</defName>
		<label>making big simple raw meatball</label>
		<description>Prepare a raw meatball by mincing meat and shaping it into spheres for easy swallowing.</description>
		<jobString>Cutting and shaping raw meat into spheres...</jobString>
		<workAmount>200</workAmount>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>MeatRaw</li>
						<li>AnimalProductRaw</li>
					</categories>
					<thingDefs>
						<li>RS_BeyondMeat</li>
					</thingDefs>
				</filter>
				<count>2.5</count>
			</li>
		</ingredients>
		<products>
			<RS_BigSimpleRawMeatBall>1</RS_BigSimpleRawMeatBall>
		</products>
	</RecipeDef>

	<RecipeDef ParentName="ChopMeatBase">
		<defName>Making_BigSimpleRawMeatBall_Bulk</defName>
		<label>making big simple raw meatball bulk</label>
		<description>Prepare 4 raw meatballs by mincing meat and shaping it into spheres for easy swallowing.</description>
		<jobString>Cutting and shaping raw meat into spheres...</jobString>
		<workAmount>750</workAmount>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>MeatRaw</li>
						<li>AnimalProductRaw</li>
					</categories>
					<thingDefs>
						<li>RS_BeyondMeat</li>
					</thingDefs>
				</filter>
				<count>10</count>
			</li>
		</ingredients>
		<products>
			<RS_BigSimpleRawMeatBall>4</RS_BigSimpleRawMeatBall>
		</products>
	</RecipeDef>


	<RecipeDef ParentName="ChopMeatBase">
		<defName>Making_BigLavishRawMeatBall</defName>
		<label>making big lavish raw meatball</label>
		<description>Prepare a more exquisite meatball by removing undesirable parts from the minced meat before shaping it into the perfect sphere for easy swallowing.</description>
		<jobString>Gently cutting and shaping raw meat into flavorful spheres...</jobString>
		<workAmount>200</workAmount>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>MeatRaw</li>
						<li>AnimalProductRaw</li>
					</categories>
					<thingDefs>
						<li>RS_BeyondMeat</li>
					</thingDefs>
				</filter>
				<count>3</count>
			</li>
		</ingredients>
		<products>
			<RS_BigLavishRawMeatBall>1</RS_BigLavishRawMeatBall>
		</products>
	</RecipeDef>

	<RecipeDef ParentName="ChopMeatBase">
		<defName>Making_BigLavishRawMeatBall_Bulk</defName>
		<label>making big lavish raw meatball bulk</label>
		<description>Prepare 4 more exquisite meatballs by removing undesirable parts from the minced meat before shaping it into perfect spheres for easy swallowing.</description>
		<jobString>Gently cutting and shaping raw meat into flavorful spheres...</jobString>
		<workAmount>750</workAmount>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>MeatRaw</li>
						<li>AnimalProductRaw</li>
					</categories>
					<thingDefs>
						<li>RS_BeyondMeat</li>
					</thingDefs>
				</filter>
				<count>12</count>
			</li>
		</ingredients>
		<products>
			<RS_BigLavishRawMeatBall>4</RS_BigLavishRawMeatBall>
		</products>
	</RecipeDef>

	<RecipeDef ParentName="ChopMeatBase">
		<defName>Making_BeyondMeat</defName>
		<label>make beyond meat</label>
		<description>Make a slab of beyond meat. It kinda looks like real meat?</description>
		<jobString>Making beyond meat.</jobString>
		<workAmount>200</workAmount>
		<fixedIngredientFilter>
					<thingDefs>
						<li>RawRice</li>
						<li>RS_RawBeetroot</li>
					</thingDefs>
		</fixedIngredientFilter>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>RawRice</li>
					</thingDefs>
				</filter>
				<count>0.75</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>RS_RawBeetroot</li>
					</thingDefs>
				</filter>
				<count>0.75</count>
			</li>
		</ingredients>
		<products>
			<RS_BeyondMeat>30</RS_BeyondMeat>
		</products>
	</RecipeDef>
	
</Defs>