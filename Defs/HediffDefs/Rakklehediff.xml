<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <HediffDef>
    <defName>Hediff_NeurotoxinBuildup</defName>
    <label>neurotoxin buildup</label>
    <description>Neurotoxins accumulate in the body, causing impaired consciousness, reduced
      mobility, and decreased manipulation ability. At high concentrations, it will cause frequent
      vomiting. The body will gradually develop immunity to clear this toxin. </description>
    <hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(0.7, 1.0, 0.7)</defaultLabelColor>
    <canApplyDodChanceForCapacityChanges>true</canApplyDodChanceForCapacityChanges>
    <makesSickThought>true</makesSickThought>
    <scenarioCanAdd>true</scenarioCanAdd>
    <taleOnVisible>ToxicityRevealed</taleOnVisible>
    <comps>
      <li Class="HediffCompProperties_Immunizable">
        <compClass>HediffComp_ImmunizableToxic</compClass>
        <severityPerDayNotImmune>-0.25</severityPerDayNotImmune>
      </li>
    </comps>
    <stages>
      <li>
        <label>initial</label>
        <becomeVisible>false</becomeVisible>
      </li>
      <li>
        <label>initial</label>
        <minSeverity>0.04</minSeverity>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.10</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>minor</label>
        <minSeverity>0.2</minSeverity>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.20</offset>
          </li>
          <li>
            <capacity>Moving</capacity>
            <postFactor>0.8</postFactor>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <postFactor>0.8</postFactor>
          </li>
        </capMods>
      </li>
      <li>
        <label>moderate</label>
        <minSeverity>0.40</minSeverity>
        <vomitMtbDays>5</vomitMtbDays>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.25</offset>
          </li>
          <li>
            <capacity>Moving</capacity>
            <postFactor>0.65</postFactor>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <postFactor>0.6</postFactor>
          </li>
        </capMods>
      </li>
      <li>
        <label>serious</label>
        <minSeverity>0.60</minSeverity>
        <vomitMtbDays>1.5</vomitMtbDays>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>0.50</setMax>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.35</offset>
          </li>
          <li>
            <capacity>Moving</capacity>
            <setMax>0.5</setMax>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <setMax>0.5</setMax>
          </li>
        </capMods>
      </li>
      <li>
        <label>extreme</label>
        <minSeverity>0.80</minSeverity>
        <vomitMtbDays>0.5</vomitMtbDays>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>0.50</setMax>
          </li>
          <li>
            <capacity>Moving</capacity>
            <setMax>0.15</setMax>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.5</offset>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>

