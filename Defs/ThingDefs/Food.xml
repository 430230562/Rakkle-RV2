	<ThingDef ParentName="RawMeatBallBase">
		<defName>RS_BigSimpleRawMeatBall</defName>
		<label>Big simple raw meatball</label>
		<description>Indulge in Rakkle's favorite food - a big ball of raw minced meat, crafted into protein-packed spheres that are lumped together for easy swallowing.</description>
		<graphicData>
			<texPath>Things/Item/Meal/chopedS</texPath>
		</graphicData>
		<statBases>
			<MarketValue>5</MarketValue>
		</statBases>
		<ingestible>
			<preferability>MealSimple</preferability>
			<tasteThought>RS_AteSimpleRawFood</tasteThought>
		</ingestible>
	</ThingDef>


	<ThingDef ParentName="RawMeatBallBase">
		<defName>RS_BigLavishRawMeatBall</defName>
		<label>Big lavish raw meatball</label>
		<description>Savor the sumptuousness of a big lavish raw meatball - Rakkle's LOVE these! Carefully crafted from minced meat and expertly formed into protein-packed spheres, these delectable balls are free from any undesirable parts.</description>
		<graphicData>
			<texPath>Things/Item/Meal/chopedL</texPath>
		</graphicData>
		<statBases>
			<MarketValue>7</MarketValue>
		</statBases>
		<ingestible>
			<preferability>MealLavish</preferability>
			<tasteThought>RS_AteLavishRawFood</tasteThought>
		</ingestible>
	</ThingDef>

	<ThingDef ParentName="PlantFoodRawBase">
		<defName>RS_BeyondMeat</defName>
		<label>beyond meat</label>
		<description>Indulge in a scrumptious and sustainable meat alternative that not only fulfills your meaty cravings but also allows you to enjoy your meal without any guilt.</description>
		<graphicData>
			<texPath>Things/Item/MeatFoodRaw/RS_BeyondMeat</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
		</graphicData>
		<uiIconForStackCount>2</uiIconForStackCount>
		<statBases>
			<MarketValue>1.5</MarketValue>
			<WorkToMake>100</WorkToMake>
			<Nutrition>0.05</Nutrition>
			<Mass>0.07</Mass>
		</statBases>
		<ingestible>
			<preferability>MealAwful</preferability>
			<!--			<ingestEffect>EatVegetarian</ingestEffect> -->
			<ingestSound>Meal_Eat</ingestSound>
			<foodType>Meat</foodType>
		</ingestible>
		<comps>
			<li Class="CompProperties_Rottable">
				<daysToRotStart>10</daysToRotStart>
				<rotDestroys>true</rotDestroys>
			</li>
		</comps>
	</ThingDef>

