				<kindDef>Combat</kindDef>
				<commonality>20</commonality>
				<options>
					<CRD_Kidnapper>10</CRD_Kidnapper>
					<CRD_Gunner>10</CRD_Gunner>
					<CRD_Sapper>2</CRD_Sapper>
					<CRD_EliteGunner>6</CRD_EliteGunner>
				</options>
			</li>
			<li>
